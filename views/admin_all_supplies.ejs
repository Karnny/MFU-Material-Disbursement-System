        $(document).ready(function () {
            updateBadge();
            updateItemTypes();
            updateItemUnits();
            updateDataSet();

            //selectType
            $("#SelectType").on('change', function () {
                table.search(this.value).draw();
            })

            $("#btnAdd").click(function () {
                $("#modalExcel").modal("show");
                $("#importType").val("");
                $("#excelfile").val("");
            });

            //covert excel file to json
            let selectedFile;
            //console.log(window.XLSX);
            $("#excelfile").on('change', function () {
                selectedFile = event.target.files[0];
            });

            // let data = [{
            //     "name": "jayanth",
            //     "data": "scd",
            //     "abc": "sdef"
            // }]

            $("#btn_upload").click(function () {

                if (!selectedFile) {
                    return Swal.fire(
                        "Error",
                        "กรุณาเลือกไฟล์",
                        "error"
                    );
                }

                const type = $("#importType").val();
                if (!type || type == "") {
                    return Swal.fire(
                        "Error",
                        "กรุณาเลือกประเภทวัสดุที่จะนำเข้า",
                        "error"
                    );
                }

                Swal.fire({
                    title: "คำเตือน",
                    text: "การนำเข้าข้อมูลที่มีอยู่แล้วจะเป็นการรีเซ็ทเป็นข้อมูลใหม่ทั้งหมด ต้องการทำต่อหรือไม่",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "ยืนยัน",
                    cancelButtonText: "ยกเลิก",
                    reverseButtons: true,
                }).then((result) => {
                    if (result.isConfirmed) {

                        // XLSX.utils.json_to_sheet(importItem, 'out.xlsx');
                        if (selectedFile) {
                            let fileReader = new FileReader();
                            fileReader.readAsBinaryString(selectedFile);
                            fileReader.onload = (event) => {
                                let importItem = event.target.result;
                                let workbook = XLSX.read(importItem, { type: "binary" });
                                //console.log(workbook);
                                workbook.SheetNames.forEach(sheet => {
                                    let rowObject = XLSX.utils.sheet_to_row_object_array(workbook.Sheets[sheet]);
                                    //console.log(rowObject);


                                    const item_amount = 0;



                                    let eng_obj = [];

                                    for (let i = 0; i < rowObject.length; i++) {

                                        let type_id = 8; // Default type_id 8 "อื่นๆ"
                                        for (k in selectType) {
                                            if (selectType[k].type_name == type) {
                                                type_id = selectType[k].type_id;
                                            }
                                        }

                                        let unit_id = 26; // Default unit_id 26 "อื่นๆ"
                                        for (p in selectUnit) {
                                            if (selectUnit[p].unit_name == rowObject[i]["หน่วยนับ"]) {
                                                unit_id = selectUnit[p].unit_id;
                                            }
                                        }

                                        let obj = {};
                                        obj.item_code = (rowObject[i]["รหัสวัสดุ"]).toString();
                                        obj.item_name = rowObject[i]["ชื่อรายการวัสดุ"];
                                        obj.item_amount = item_amount;
                                        obj.type_id = type_id;
                                        obj.unit_id = unit_id;

                                        eng_obj.push(obj);
                                    }

                                    console.log(eng_obj);

                                    $.ajax({
                                        type: "POST",
                                        url: "/api/admin/importItems",
                                        data: { eng_obj, type },
                                        dataType: "",
                                        success: function (response) {
                                            $("#modalExcel").modal("hide");
                                            Swal.fire(
                                                "เสร็จสิ้น",
                                                "นำเข้าข้อมูลสำเร็จ",
                                                "success"
                                            ).then((result) => {
                                                if (result.isConfirmed) {
                                                    window.location.reload();
                                                    // updateDataSet();
                                                    // table.clear();
                                                    // table.rows.add(Setdatatable).draw();
                                                }
                                            });;

                                        },
                                        error: function (xhr) {
                                            Swal.fire(xhr.responseText);
                                        }
                                    });


                                });
                            }
                        }
                    }
                });


            });

            //function Create Table
            var table = $("#data_table").DataTable({
                data: Setdatatable,
                columnDef: [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0,
                }], "order": [[1, 'asc']],

                columns: [
                    { title: "ลำดับ", defaultContent: "" },
                    { data: "id", title: "รหัสวัสดุ" },
                    { data: "name", title: "ชื่อ" },
                    { data: "type", title: "หมวดหมู่" },
                    { data: "amount", title: "จำนวน" },
                    { data: "unit", title: "หน่วยนับ" },
                    {
                        data: "dates", title: "วันที่เพิ่มลงคลังล่าสุด", render: function (data, type, row, meta) {
                            let dateArr = data.split('-');
                            return `${dateArr[2]}/${dateArr[1]}/${dateArr[0]}`;
                        }
                    },
                    { title: "แก้ไข", defaultContent: "<button class='btn' id='btnTableEdit'><i class='fas fa-edit'></i></button>" },
                    { title: "ลบ", defaultContent: "<button class='btn' id='btnTableDel'><i class='fas fa-trash-alt'></i></button>" }
                ]

            });
            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            //function selectStatus
            function setTypes(selectArray, tb) {

                let option = `<option value="" disabled>-- เลือก --</option>`;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].type_name}</option>`;
                }
                tb.html(tb.html() + option);
            }

            function setUnits(selectArray, tb) {

                let option = `<option value="" disabled>-- เลือก --</option>`;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].unit_name}</option>`;
                }
                tb.html(tb.html() + option);
            }

            function setCategory(selectArray, tb) {
                const select = `<option value="" selected>ทั้งหมด</option>`;
                let option = ``;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].type_name}</option>`;
                }
                tb.html(tb.html() + select + option);
            }


            //function Create SelectStatus
            let select_Type = $("#SelectType");
            setCategory(selectType, select_Type);

            //function Create Import Type
            let import_type = $("#importType");
            setTypes(selectType, import_type);



            //function Create SelectType
            let select_typeaddnew = $("#SelectTypeAddnew");
            setTypes(selectType, select_typeaddnew);


            //function Create SelectUnit
            let select_unitaddnew = $("#SelectUnitAddnew");
            setUnits(selectUnit, select_unitaddnew);

            //function Create SelectTypeEdit
            let select_typeedit = $("#SelectTypeEdit");
            setTypes(selectType, select_typeedit);


            //function Create SelectUnitEdit
            let select_unitedit = $("#SelectUnitEdit");
            setUnits(selectUnit, select_unitedit);


            $("#btnAddnew").click(function () {

                $("#modalAddNew").modal("show");
                $("#AddnewTextID").val("");
                $("#AddnewTextName").val("");
                // $("#AddnewTextAmount").val("");
                $("#SelectTypeAddnew").val("");
                $("#SelectUnitAddnew").val("");

            });

            $("#btn_addnew").click(function () {
                const id = $("#AddnewTextID").val();
                const name = $("#AddnewTextName").val();
                const amount = 0;
                const type = $("#SelectTypeAddnew").val();
                const unit = $("#SelectUnitAddnew").val();

                const date = new Date().toISOString().slice(0, 10);

                let check;
                for (let i = 0; i < Setdatatable.length; i++) {
                    if (Setdatatable[i].id == id) {
                        check = false;
                        break;
                    }
                }

                if (check == false) {
                    Swal.fire({
                        icon: 'error',
                        title: 'รหัสวัสดุซ้ำกัน',
                        text: 'โปรดตรวจสอบรหัสวัสดุอีกครั้ง!',
                    });
                } else if (id == "" || name == "" || type == "" || unit == "") {
                    Swal.fire({
                        icon: 'error',
                        title: 'เพิ่มรายการไม่สำเร็จ',
                        text: 'โปรดใส่ข้อมูลให้ครบถ้วน!'
                    });


                } else {
                    let type_id;
                    for (i in selectType) {
                        if (selectType[i].type_name == type) {
                            type_id = selectType[i].type_id;
                        }
                    }

                    let unit_id;
                    for (i in selectUnit) {
                        if (selectUnit[i].unit_name == unit) {
                            unit_id = selectUnit[i].unit_id;
                        }
                    }
                    $.ajax({
                        type: "POST",
                        url: "/api/admin/addItem",
                        data: {
                            item_code: id,
                            item_name: name,
                            item_amount: amount,
                            type_id: type_id,
                            unit_id: unit_id
                        },
                        dataType: "",
                        success: function (response) {
                            Setdatatable.push({

                                "id": id,
                                "name": name,
                                "amount": amount,
                                "type": type,
                                "unit": unit,
                                "dates": date

                            });

                            Swal.fire({
                                icon: 'success',
                                title: 'เพิ่มรายการวัสดุสำเร็จ',
                                html: `ชื่อรายการ ${name}<br />จำนวน ${amount}<br />ผู้ดำเนินรายการ <%= user.firstname %> <%= user.lastname %><br />เพิ่มลงคลังเมื่อ ${new Date().toISOString().slice(0, 10)}`
                            });
                            table.clear();
                            table.rows.add(Setdatatable).draw();
                            $("#modalAddNew").modal('hide');

                        },
                        error: function (xhr) {
                            Swal.fire({
                                icon: 'error',
                                title: 'เพิ่มรายการไม่สำเร็จ',
                                text: xhr.responseText
                            });
                        }
                    });

                }


            })

            var selectEditData;
            var selectDelData;
            var rowID;
            $("#data_table tbody").on("click", "#btnTableEdit", function () {

                const currentRow = $(this).parents("tr");
                const data = table.row(currentRow).data();
                selectEditData = data;

                rowID = table.row(currentRow).index();
                $("#EditTextID").val(data.id);
                $("#EditTextName").val(data.name);
                $("#TextAmount").val(data.amount);
                $("#EditTextAmount").val("");
                $("#SelectTypeEdit").val(data.type);
                $("#SelectUnitEdit").val(data.unit);

                $("#modalEdit").modal("show");

            });

            $("#btn_edit").click(function () {

                const trueIndex = Setdatatable.map(e => e.id).indexOf(selectEditData.id);
                const id = selectEditData.id;
                const name = $("#EditTextName").val();
                const amount = Number($("#EditTextAmount").val());
                const editAmountType = $(`input[name='EditAmountType']:checked`).val();
                const type = $("#SelectTypeEdit").val();
                const unit = $("#SelectUnitEdit").val();


                let type_id;
                for (i in selectType) {
                    if (selectType[i].type_name == type) {
                        type_id = selectType[i].type_id;
                    }
                }

                let unit_id;
                for (i in selectUnit) {
                    if (selectUnit[i].unit_name == unit) {
                        unit_id = selectUnit[i].unit_id;
                    }
                }

                $.ajax({
                    type: "PUT",
                    url: "/api/admin/updateItem",
                    data: {
                        item_code: id,
                        item_name: name,
                        item_amount: amount,
                        updateAmountType: editAmountType,
                        type_id: type_id,
                        unit_id: unit_id
                    },
                    dataType: "",
                    success: function (response) {

                        updateDataSet();

                        //2. update data table
                        // let temp = table.row(rowID).data();
                        // temp.name = name;
                        // temp.amount = amount;
                        // temp.type = type;
                        // temp.unit = unit;
                        // table.row(rowID).data(temp).invalidate();

                        table.clear();
                        table.rows.add(Setdatatable).draw();

                        Swal.fire({
                            icon: 'success',
                            title: 'แก้ไขรายการวัสดุสำเร็จ',
                            html: `ชื่อรายการ ${name}<br />จำนวน ${amount}<br />ผู้ดำเนินรายการ <%= user.firstname %> <%= user.lastname %><br />แก้ไขวัสดุเมื่อ ${new Date().toISOString().slice(0, 10)}`
                        });
                        $("#modalEdit").modal("hide");
                    },
                    error: function (xhr) {
                        Swal.fire({
                            icon: 'error',
                            title: 'เพิ่มรายการไม่สำเร็จ',
                            text: xhr.responseText
