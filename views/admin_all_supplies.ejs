        function updateDataSet() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/admin/getItemsList",
                dataType: "",
                success: function (response) {
                    Setdatatable = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText)
                }
            });
        }

        function updateItemTypes() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/getItemTypes",
                dataType: "",
                success: function (response) {
                    selectType = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }

        function updateItemUnits() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/getItemUnits",
                dataType: "",
                success: function (response) {
                    selectUnit = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }

        function updateBadge() {
            $.ajax({
                type: "GET",
                url: "/api/getPendingRequestCount",
                dataType: "",
