    <script>

        var rowID;
        //function set array of table
        let Setdatatable = [];

        var selectType = [];
        var selectUnit = [];
        var userList = [];
        var reqData = [];
        var supData = [];
        var itemArray = [];

        var per_table;


        function getUserList() {
            $.ajax({
                type: "GET",
                url: "/api/getUsers",
                async: false,
                dataType: "json",
                success: function (response) {
                    userList = response;
                },
                error: function (xhr) {
                    Swal.fire(xhr.responseText);
                }
            });
        }

        function updateDataSet() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/admin/getItemsList",
                dataType: "",
                success: function (response) {
                    Setdatatable = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText)
                }
            });
        }

        function updateItemTypes() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/getItemTypes",
                dataType: "",
                success: function (response) {
                    selectType = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }

        function updateItemUnits() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/getItemUnits",
                dataType: "",
                success: function (response) {
                    selectUnit = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }

        $(document).ready(function () {

            updateItemTypes();
            updateItemUnits();
            updateDataSet();
            getUserList();

            $("#personStat").hide();

            $("#SelectDataType").change(function () {

                let option = "";
                option = $(this).val();

                // displayOption = $(this).find("option:selected").val();
                // console.log(displayOption);
                //console.log(option);

                if (option == "person") {
                    $("#personStat").show();
                    $("#allStat").hide();
                    //console.log("select person");
                } else {
                    $("#personStat").hide();
                    $("#allStat").show();
                    //console.log("select all");
                }

            });

            $("#SelectMonth").change(function(){
                table.search(this.value).draw();
            });

            $("#SelectYear").change(function(){
                table.search(this.value).draw();
            });

            //function Create Table of Overview Stat
            var table = $("#all_table").DataTable({
                data: Setdatatable,
                dom: 'Bfrtip',

                columnDef: [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0,
                }], "order": [[1, 'asc']],
                columns: [
                    { title: "ลำดับ", defaultContent: "" },
                    { data: "id", title: "รหัสวัสดุ" },
                    { data: "name", title: "ชื่อ" },
                    { data: "type", title: "หมวดหมู่" },
                    { data: "amount", title: "จำนวน" },
                    { data: "unit", title: "หน่วยนับ" },
                    {
                        data: "dates", title: "เบิกล่าสุดเมื่อ", render: function (data, type, row, meta) {
                            let dateArr = data.split('-');
                            return `${dateArr[2]}/${dateArr[1]}/${dateArr[0]}`;
                        }
                    },

                ],
                buttons: [
                    'excel'
                ]
            });
            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();



            $("#personalStat").hide();


            // Select user to see their stat
            var userTable = $("#userList_table").DataTable({

                data: userList,
                "lengthChange": false,
                "pageLength": 2,
                columnDef: [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0,
                }],
                columns: [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }, title: "ลำดับ"
                    },
                    { data: "email", title: "อีเมลผู้ใช้งาน" },
                    {
                        data: "firstname", title: "ชื่อ-สกุล", render: function (data, type, row, meta) {
                            return (row.name_title == null || row.name_title == "" ? "" : row.name_title) + " " + row.firstname + " " + row.lastname;
                        }
                    },
                    { data: "division_name", title: "ตำเหน่ง" },
                    { defaultContent: `<button class="btn btn-primary" id="btnSelect" >เลือก</button>` }
                ]

            });



            $("#userList_table tbody").on("click", "#btnSelect", function () {

                $("#personalStat").show();

                const currentRow = $(this).parents("tr");
                const data = userTable.row(currentRow).data();
                rowID = userTable.row(currentRow).index();

                const userFN = userList[rowID].firstname;
                const userLN = userList[rowID].lastname;

                $("#personName").html(userFN + " " + userLN);

                //console.log(userList[rowID].user_id);
                const user_id = userList[rowID].user_id;

                $.ajax({
                    type: "GET",
                    async: false,
                    url: "/api/stat/getRequestHistory/" + user_id,
                    dataType: "",
                    success: function (response) {
                        reqData = response;
                        //console.log(reqData);

                        for (i in reqData) {
                            if (reqData[i].approval_status == 'disapprove') {
                                delete reqData[i];
                            }
                        }

                        //console.log(reqData);

                    }, error: function (xhr) {
                        alert(xhr.responseText);
                    }
                });

                let collectReqNo = [];

                for (i in reqData) {
                    collectReqNo.push(reqData[i].reqNo);
                }
                //console.log(collectReqNo);

                $.ajax({
                    type: "POST",
                    url: "/api/stat/getRequestDetailsId",
                    async: false,
                    data: { collectReqNo },
                    dataType: "",
                    success: function (response) {

                        supData = response;
                    },
                    error: function (xhr) {
                        Swal.fire("This person don't have any history");
                    }
                });

                for (i in supData) {
                    // let itemArray = supData[i].reqItem;
                    // console.log(itemArray);

                    for (j in supData[i].reqItem) {
                        //console.log(supData[i].reqItem[j]);
                        //console.log(supData[i].reqItem[j]);
                        itemArray.push(supData[i].reqItem[j]);
                    }
                }

                //console.log(itemArray);
                per_table.clear();
                per_table.rows.add(itemArray).draw();
                //alert(itemArray);


            });


            console.log(itemArray);
            //function Create Table of personal Stat
            per_table = $("#person_table").DataTable({
                data: itemArray,
                dom: 'Bfrtip',
                columns: [
                    { title: "ลำดับ", defaultContent: "" },
                    { data: "supID", title: "รหัสวัสดุ" },
                    { data: "supName", title: "ชื่อ" },
                    { data: "supCate", title: "หมวดหมู่" },
                    { data: "supAmount", title: "จำนวน" },
                    { data: "supUnit", title: "หน่วยนับ" },
                    {
                        data: "dates", title: "เบิกล่าสุดเมื่อ", render: function (data, type, row, meta) {
                           
                            return ``;
                        }
                    },

                ],
                buttons: [
                    'excel'
                ]
            });
            


            //function selectStatus
            function setTypes(selectArray, tb) {

                let option = `<option value="" disabled>-- เลือก --</option>`;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].type_name}</option>`;
                }
                tb.html(tb.html() + option);
            }

            function setCategory(selectArray, tb) {
                const select = `<option value="" selected>ทั้งหมด</option>`;
                let option = ``;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].type_name}</option>`;
                }
                tb.html(tb.html() + select + option);
            }


            //function Create SelectStatus
            let select_Type = $("#SelectType");
            setCategory(selectType, select_Type);

            // ตั้งตัวแปรเก็บ types ทั้งหมด
            let typesRawDataSet = [];
            for (i in Setdatatable) {
                typesRawDataSet.push(Setdatatable[i].types);
            } // เลือกเอา types ทั้งหมดใน Setdatatable ไว้ใน Array ใหม่


            let noDupTypes = Array.from(new Set(typesRawDataSet)); // กำจัดชื่อ types ที่ซ้ำกัน

            // ตั้งตัวแปรเก็บข้อมูล chart
            let charDataSet = [];

            // Concept Loop แรกคือเอาทุก type ที่ไม่ซ้ำ (noDupTypes) ไปเทียบกับ dataset ที่มี type ซ้ำ (Setdatatable)
            // เพื่อนับจำนวน type นั้นทั้งหมด
            for (i in noDupTypes) {
                let type_amount = 0;
                for (j in Setdatatable) {
                    if (Setdatatable[j].types == noDupTypes[i]) { // เช็คว่าชื่อ type นี้ตรงกับใน dataset หรือยัง
                        type_amount += Number(Setdatatable[j].amount); // ถ้าตรงก็บวกนับจำนวน amount
                    }
                }
                // เมื่อ loop เสร็จแต่ละ type ก็ดัน name กับค่า y เข้าไปเพื่อเอาไปแสดง chart ต่อ
                charDataSet.push({ name: noDupTypes[i], y: type_amount });
            }

            //console.log(charDataSet);


            // Create the chart
            $(function () {
                $('#container1').highcharts({
                    chart: { type: 'column' },
                    title: { text: 'สถิติการเบิกของแต่ละหมวดหมู่' },
                    accessibility: {
                        announceNewData: {
                            enabled: true
                        }
                    },
                    xAxis: { type: 'category', title: { text: 'หมวดหมู่' } },
                    yAxis: { title: { text: 'จำนวนยอดเบิก' } },
                    legend: {
                        enabled: false
                    },


                    tooltip: {
                        headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                        pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}</b> <br/>'
                    },

                    series: [{
                        name: "Category",
                        colorByPoint: true,
                        data: charDataSet
                    }],

                });
            });

            $('.buttons-excel').hide()

        });

        function ExportExcel() {
            $('.buttons-excel').click()
        }
    </script>

