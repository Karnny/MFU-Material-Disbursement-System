    <script>

        var rowID;
        //function set array of table
        let Setdatatable = [];

        //array of SelectStatus
        var selectType = [];

        var selectUnit = [];

        function updateDataSet() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/admin/getItemsList",
                dataType: "",
                success: function (response) {
                    Setdatatable = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText)
                }
            });
        }

        function updateItemTypes() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/getItemTypes",
                dataType: "",
                success: function (response) {
                    selectType = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }

        function updateItemUnits() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/getItemUnits",
                dataType: "",
                success: function (response) {
                    selectUnit = response;
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }

        $(document).ready(function () {


            

            updateItemTypes();
            updateItemUnits();
            updateDataSet();
            //selectType
            $("#SelectType").on('change', function () {
                table.search(this.value).draw();
            })
            

             // Tatal request
             $("#totalReq").html(Setdatatable.length);


            //function Create Table
            var table = $("#data_table").DataTable({
                data: Setdatatable,
                columnDef: [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0,
                }], "order": [[1, 'asc']],

                columns: [
                    { title: "ลำดับ", defaultContent: "" },
                    { data: "id", title: "รหัสวัสดุ" },
                    { data: "name", title: "ชื่อ" },
                    { data: "type", title: "หมวดหมู่" },
                    { data: "amount", title: "จำนวน" },
                    { data: "unit", title: "หน่วยนับ" },
                    {
                        data: "dates", title: "วันที่เพิ่มลงคลังล่าสุด", render: function (data, type, row, meta) {
                            let dateArr = data.split('-');
                            return `${dateArr[2]}/${dateArr[1]}/${dateArr[0]}`;
                        }
                    },

                ]

            });
            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();


            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();



            //function selectStatus
            function setTypes(selectArray, tb) {

                let option = `<option value="" disabled>-- เลือก --</option>`;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].type_name}</option>`;
                }
                tb.html(tb.html() + option);
            }

            function setCategory(selectArray, tb) {
                const select = `<option value="" selected>ทั้งหมด</option>`;
                let option = ``;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].type_name}</option>`;
                }
                tb.html(tb.html() + select + option);
            }


            //function Create SelectStatus
            let select_Type = $("#SelectType");
            setCategory(selectType, select_Type);


        });

