    <script>

        var rowID;
        var table;
        var tablemodal;
        var selectType = [
            { status: "ไม่อนุมัติ" },
            { status: "เสร็จสิ้น" },
        ]
        var reqData = [
            {
                dateReq: "11/05/2020",
                dateApp: "12/05/2020",
                timeApp: "15:48:25",
                reqNo: "630000001",
                name_title: "อาจารย์ ดร.",
                firstName: "สุรพงษ์",
                lastName: "อุตมา",
                email: "surapong@mfu.ac.th", reqStatus: "ไม่อนุมัติ", reqReason: "ต้องการนำไปใช้เตรียมเอกสารงานวิจัย"
            },

        ];

        var supData = [
            { supID: "101000001", supName: "กรรไกรตัดกระดาษ 6", supUnit: "อัน", supCate: "วัสดุสำนักงาน", supAmount: Math.floor(Math.random() * 100), supLeft: Math.floor(Math.random() * 100) },
            { supID: "103000456", supName: "ถุงขยะสีดำขนาด 30*40", supUnit: "แพ็ก", supCate: "วัสดุของที่ระลึก", supAmount: Math.floor(Math.random() * 100), supLeft: Math.floor(Math.random() * 100) },

        ];

        function updateDataSet() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/user/getRequestHistory",
                dataType: "",
                success: function (response) {
                    reqData = response;
                },
                error: function (xhr) {
                    Swal.fire(xhr.responseText);
                }
            });
        }

        $(document).ready(function () {

            updateDataSet();


            $("#SelectType").on('change', function () {
                table.search(this.value).draw();
            })

            //function selectStatus
            function selectCategory(selectArray, tb) {
                const select = `<option value="" selected>ทั้งหมด</option>`;
                let option = ``;
                for (i in selectArray) {
                    option += `<option>${selectArray[i].status}</option>`;
                }
                tb.html(tb.html() + select + option);
            }

            //function Create SelectStatus
            let select_Type = $("#SelectType");
            selectCategory(selectType, select_Type);





            //Create
            table = $("#updateReqTable").DataTable({
                data: reqData,
                columnDef: [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0,
                }], "order": [[1, 'asc']],
                columns: [
                    {
                        title: "ลำดับ", defaultContent: ""
                    },
                    { "className": "text-left", data: "dateApp", title: "วันที่อนุมัติคำขอ" },
                    { "className": "text-left", data: "timeApp", title: "เวลาที่อนุมัติคำขอ" },
                    {
                        "className": "text-left", title: "ผู้ขอเบิก", render: function (data, type, full, meta) {
                            return full.name_title + " " + full.firstName + "  " + full.lastName;
                        }
                    },
                    { title: "รายการขอเบิก", defaultContent: "<a style='text-decoration: underline; cursor: pointer;' id = 'moreInfo'>ดูเพิ่มเติม</a>" },
                    {
                        data: "reqStatus", title: "สถานะ", render: function (data, type, row, meta) {
                            if (data == 'ไม่อนุมัติ') {
                                return '<span class="badge badge-pill badge-danger">' + data + '</span>';
                            } else if (data == 'เสร็จสิ้น') {
                                return '<span class="badge badge-pill badge-success">' + data + '</span>';
                            }
                        },
                    }
                ]
            });
            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();


            //more info button
            $("#updateReqTable tbody").on("click", "#moreInfo", function () {

                const currentRow = $(this).parents("tr");
                const data = table.row(currentRow).data();
                let reqNo = data.reqNo;
                rowID = table.row(currentRow).index();

                $.ajax({
                    type: "GET",
                    async: false,
                    url: "/api/user/getRequestDetailsId/" + reqNo,
                    dataType: "",
                    success: function (response) {
                        supData = response;
                    },
                    error: function (xhr) {
                        Swal.fire(xhr.responseText);
                    }
                });

                tablemodal.clear();
                tablemodal.rows.add(supData).draw();

                //show modal
                $("#moreInfoModal").modal("show");

                $("#reqDate").html(reqData[rowID].dateReq);
                $("#requesterName").html(reqData[rowID].name_title + " " + reqData[rowID].firstName + "  " + reqData[rowID].lastName);
                $("#requesterEmail").html(reqData[rowID].email);
                $("#reqReason").html(reqData[rowID].reqReason);
                $("#rejectReason").html(reqData[rowID].reject_reason);
                $("#appDate").html(reqData[rowID].dateApp);
                $("#reqStatus").html(reqData[rowID].reqStatus);

                if (reqData[rowID].reqStatus == 'ไม่อนุมัติ') {
                    $('#reasonText').show();
                } else if (reqData[rowID].reqStatus == 'เสร็จสิ้น') {
                    $('#reasonText').hide();
                }

            });

            //Total request 
            $("#totalReq").html(reqData.length);

            //Table in More Info Modal
            tablemodal = $("#supListTable").DataTable({
                data: supData,

                columns: [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }, title: "ลำดับ"
                    },
                    { data: "supID", title: "รหัสวัสดุ" },
                    { data: "supName", title: "รายการ" },
                    { data: "supCate", title: "หมวดหมู่" },
                    { data: "supAmount", title: "จำนวน" },
                    { data: "supUnit", title: "หน่วยนับ" },
                    { data: "supLeft", title: "ยอดคงเหลือในคลัง" },

                ],
                lengthMenu: [
                    [5, 10, 15, -1],
                    ['5', '10', '15', 'Show all']
                ],
            });

        });

    </script>

