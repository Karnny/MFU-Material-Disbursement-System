    <script>

        var userInfo = {};


        $(document).ready(function () {
            updateBadge();
            getUserInfo();
            showInfo();
            $("#btnEdit").click(function () {

                if ($(this).val() == "Edit") {
                    disableInput(false);
                    $(this).val("Save");

                } else if ($(this).val() == "Save") {
                    saveInput();
                    disableInput(true);
                    $(this).val("Edit");
                }
            });



        });

        function getUserInfo() {
            $.ajax({
                type: "GET",
                async: false,
                url: "/api/getUserProfile",
                dataType: "",
                success: function (response) {
                    userInfo = response;
                },
                error: function (xhr) {
                    Swal.fire(xhr.responseText);
                }
            });
        }

        function saveInput() {
            let user_data = {};
            user_data.firstname = $("#Firstname").val();
            user_data.lastname = $("#Lastname").val();
            user_data.email = $("#Email").val();
            user_data.phone_number = $("#Phone").val();

            $.ajax({
                type: "PUT",
                url: "/api/updateUserProfile",
                data: { user_data },
                dataType: "",
                success: function (response) {
                    Swal.fire(
                        "เสร็จสิ้น",
                        "ทำการแก้ไขข้อมูลแล้ว",
                        "success"
                    );

                    getUserInfo();
                    showInfo();
                },
                error: function (xhr) {
                    Swal.fire(xhr.responseText);
                }
            });

        }

        function disableInput(bool) {
            $("#Firstname").prop("disabled", bool);
            $("#Lastname").prop("disabled", bool);
            $("#Email").prop("disabled", true);
            $("#Phone").prop("disabled", bool);

        }

        function showInfo() {
            $("#Firstname").val(userInfo.firstname);
            $("#Lastname").val(userInfo.lastname);
            $("#Email").val(userInfo.email);
            $("#Phone").val(userInfo.phone_number);

        }

        function updateBadge() {
            $.ajax({
                type: "GET",
                url: "/api/user/getRequestCount",
                dataType: "",
                success: function (response) {

                    $("#pendingReqBadge").html(response.count);
                },
                error: function (xhr) {
                    Swal.fire(
                        "Error",
                        xhr.responseText,
                        "error"
                    );
                }
            });
        }

    </script>

